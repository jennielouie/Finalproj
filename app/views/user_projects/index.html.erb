<!-- User's Project Index Page (User_Projects) -->

<div class = "page-header">
<h1>Your Projects <small>Click on title to work on a project</small></h1>
</div>

<div class="row">
   <div class="col-xs-12 col-sm-8 col-md-8">
      <div class="table-responsive">
         <table class="table table-hover table-condensed table-striped">
            <thead>
             <tr>
               <th>#</th>
               <th>Project Name</th>
               <!-- <th>Description</th> -->
               <th></th>
             </tr>
            </thead>
            <tbody>
               <% @proj_list.each do |f| %>
                <tr>
                  <td><%=f.id%></td>
                  <td><%= link_to "#{f.projtitle.capitalize}: #{f.description}", user_user_project_path(current_user, UserProject.where(:project_id => f.id,:user_id => current_user.id).first) %></td>
                  <!-- <td><%=f.description%></td> -->
                  <td><%=button_to "Delete this project", user_user_project_path(current_user, UserProject.where(:project_id => f.id,:user_id => current_user.id).first),{ action: "destroy", method: :delete, data: { confirm: "Are you sure you want to delete this project?", remote: true }, :class=> "btn btn-danger" }%></td>
                </tr>
               <% end %>
            </tbody>
         </table>
      </div>
   </div>
</div>

<div class="col-xs-12 col-sm-4 col-md-4">
  <button class="btn btn-default btn-lg"><%= link_to "Create a new project", new_project_path %></button>
</br>
</br>
  <button class="btn btn-default btn-lg"><%= link_to "Add a project from the database", new_user_user_project_path(current_user) %></button>

</div>