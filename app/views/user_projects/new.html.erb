<h1>Add a New Project to your Dashboard</h1>

<h4>Here is a list of existing projects</h4>

<ul>
  <% @project.each do |p| %>
    <li><%=p.id%>: <%=p.projtitle %></li>
  <%end %>
</ul>

<%= form_tag("/users/1/user_projects", :method=> :post) do %>
  <div class = "field">
    <%= label_tag(:project_id, "Project ID:") %></br>
    <%= text_field_tag(:project_id) %>
  </div>
  <%=hidden_field_tag(:user_id, "#{current_user.id}") %>
  <div class = "form-actions">
    <%= submit_tag("Add to my projects") %>
  </div>
<% end %>


<%= link_to "Or create a new project", new_project_path %></br>
<%= link_to "Return to all Your Projects", user_user_projects_path(current_user) %>