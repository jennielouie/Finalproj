
<div class="jumbotron">
  <h1>Welcome to Stitcherdoodle</h1>
  <p> Your Personal Assistant for Crochet and Knitting Projects </p>
  <!-- <button><%#= link_to "Sign Up, it's Free!", new_user_path %></button> -->
</div>

<!-- Button trigger modal -->
<div class="col-xs-12 col-sm-4 col-md-4">
  <h2>Please log in or </h2><button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">Sign Up for Free</button>
</div>
</br>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Sign up for Stitcherdoodle</h4>
      </div>
      <div class="modal-body">
              <%= form_for @user do |f| %>
            <% if @user.errors.any? %>
            <div class = "error_messages">
              <h4>Sorry, the user data is invalid for the following reason(s):</h4>
              <ol>
            <% for message in @user.errors.full_messages %>
            <li><%= message %></li>
            <% end %>
              </ol>
              <h4>Please retry below</h4>
            </div>
          <% end %>

          <div class = "form-group">
            <%=f.label :name %>
            <%=f.text_field :name %>
          </div>

          <div class = "form-group">
            <%=f.label :email %>
            <%=f.text_field :email %>
          </div>

          <div class = "form-group">
            <%=f.label :password %>
            <%=f.password_field :password %>
          </div>

          <div class = "form-group">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation %>
          </div>

      </div>
      <div class="modal-footer">
        <%= f.submit "Join Now", class: "btn btn-success" %>
          <% end %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>

      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="col-xs-12 col-sm-6 col-md-6">
<%= form_tag sessions_path do %>
  <div class = "form-group">
    <%= label_tag :email %></br>
    <%= text_field_tag :email, params[:email], :class => 'form-control' %>
  </div>

  <div class = "form-group">
    <%= label_tag :password %></br>
    <%= password_field_tag :password, :placeholder => "Password",:class => 'form-control' %>
  </div>

  <div class = "form-actions">
    <%= submit_tag "SUBMIT", :class =>'btn btn-success' %></br>
  </div>
<% end %>
</div>
