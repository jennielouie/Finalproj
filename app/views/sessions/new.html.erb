
<div class = "titlediv">
  <h1>Welcome to Stitcherdoodle</h1>
  <h4> Your Personal Assistant for Crochet and Knitting Projects </h4>
</div>

<h2>Please log in</h2>

<%= form_tag sessions_path do %>
  <div class = "form-group">
    <%= label_tag :email %></br>
    <%= text_field_tag :email, params[:email], :class => 'form-control' %>
  </div>

  <div class = "form-group">
    <%= label_tag :password %></br>
    <%= password_field_tag :password, :class => 'form-control' %>
  </div>

  <div class = "form-actions">
<%= submit_tag "SUBMIT", :class =>'btn btn-default' %></br>
</div>
<% end %>


