<%= form_for (@project) do |f| %>
  <div class = "form-inputs">
    <div class = "field">
      <%= f.label "Project Title" %></br>
      <%= f.text_field :projtitle %>
    </div>

    <div class = "field">
      <%= f.label "Project Author" %></br>
      <%= f.text_field :author %>
    </div>

    <div class = "field">
      <%= f.label "Project Description" %></br>
      <%= f.text_area :description %>
    </div>

    <div class = "field">
      <%= f.label "Pattern" %></br>
      <%= f.text_area :pattern %>
    </div>

<%= fields_for @user_project do |f| %>
      <%=f.hidden_field :user_id, value: current_user.id %>

   <% end %>

  </div>
  <div class = "form-actions">
    <%= f.submit %>
  </div>
<% end %>